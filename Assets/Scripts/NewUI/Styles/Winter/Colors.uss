:root {
    --text-outline: #046300;

    --text-color: #ffffff;
    --shadow-color: rgba(0, 0, 0, 0.3);

    --button-border-color: var(--primary-3);

    --card-background-color: rgba(0, 0, 0, 0.247);

    --primary: rgb(57, 155, 65);
    --primary-2: rgb(6, 114, 15);
    --primary-3: #72bd6e;

    --secondary: #ffffff;
}

.cool-text {
    -unity-font-style: bold;
    -unity-text-outline-width: 3px;
    -unity-text-outline-color: var(--text-outline);
    text-shadow: -5px 5px 0 var(--shadow-color);
}