.content-container {
    transition-duration: 100ms;
}

.content-container.pause-transition {
    translate: 0 100px;
    opacity: 0;
}

.content-container > * {
    margin-bottom: 20px;
}

.content-container > .base-button {
    margin-left: 30px;
    margin-right: 30px;
    min-width: 350px;
    transition-property: margin;
    transition-duration: 100ms;
}

.content-container > .base-button:hover {
    margin-right: 1px;
    margin-left: 1px;
}
